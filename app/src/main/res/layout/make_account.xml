<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeAccount">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TabHost
            android:id="@+id/selectClient"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#80d4f6">

                </TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--=====================일반회원 회원가입 레이아웃====================================-->
                    <LinearLayout
                        android:id="@+id/show1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/makeClient"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <!--성명 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text="     Name       :"
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeCName"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textSize="20dp"
                                        />
                                </LinearLayout>


                                <!--ID 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text="       I     D       : "
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeCID"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textSize="20dp" />


                                </LinearLayout>

                                <!--비밀번호 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text=" Password    : "
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeCPassword"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textSize="20dp" />
                                </LinearLayout>

                                <!--비밀번호 확인 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">


                                </LinearLayout>

                                <!--전화번호 확인 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text=" P  h  o  n  e  :"
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeCPhoneNum_1"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textAlignment="center"
                                        android:textSize="20dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#000000"
                                        android:textSize="20dp"
                                        android:layout_marginLeft="6dp"
                                        android:layout_marginRight="6dp"/>
                                    <EditText
                                        android:id="@+id/makeCPhoneNum_2"
                                        android:layout_width="58dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textAlignment="center"
                                        android:textSize="20dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#000000"
                                        android:textSize="20dp"
                                        android:layout_marginLeft="6dp"
                                        android:layout_marginRight="6dp"/>
                                    <EditText
                                        android:id="@+id/makeCPhoneNum_3"
                                        android:layout_width="58dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textAlignment="center"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!--회원가입 완료하는 공간-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom|center">

                                <Button
                                    android:id="@+id/completeClient"
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content"
                                    android:text="가    입     완    료"
                                    android:textSize="35dp"
                                    android:textColor="#FFFFFF"
                                    android:background="@drawable/custom_button1"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                    <!--======================일반회원 회원가입 레이아웃====================================-->


                    <!--======================사업자 회원가입 레이아웃==================================-->
                    <LinearLayout
                        android:id="@+id/show2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <LinearLayout
                            android:id="@+id/makeManger"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">
                                <!--성명 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text="     Name       :"
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeMName"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textSize="20dp" />
                                </LinearLayout>


                                <!--ID 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text="       I     D       : "
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeMID"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textSize="20dp" />
                                </LinearLayout>

                                <!--비밀번호 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text=" Password    : "
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeMPassword"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textSize="20dp" />
                                </LinearLayout>

                                <!--비밀번호 확인 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">


                                </LinearLayout>

                                <!--전화번호 확인 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text=" P  h  o  n  e  :"
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeMPhoneNum_1"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textAlignment="center"
                                        android:textSize="20dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#000000"
                                        android:textSize="20dp" />
                                    <EditText
                                        android:id="@+id/makeMPhoneNum_2"
                                        android:layout_width="58dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textAlignment="center"
                                        android:textSize="20dp" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="#000000"
                                        android:textSize="20dp" />
                                    <EditText
                                        android:id="@+id/makeMPhoneNum_3"
                                        android:layout_width="58dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textAlignment="center"
                                        android:textSize="20dp" />
                                </LinearLayout>

                                <!--사업자 자격증번호 입력하는 공간-->
                                <LinearLayout
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="135dp"
                                        android:layout_height="wrap_content"
                                        android:text="사업자 번 호  :"
                                        android:textSize="20dp"
                                        android:textStyle="bold"/>

                                    <EditText
                                        android:id="@+id/makeLicense"
                                        android:layout_width="180dp"
                                        android:layout_height="wrap_content"
                                        android:hint=""
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>


                            <!--회원가입 완료하는 공간-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="bottom|center">

                                <Button
                                    android:id="@+id/completeHairDresser"
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content"
                                    android:text="가    입     완    료"
                                    android:textSize="35dp"
                                    android:background="@drawable/custom_button"
                                    android:textColor="#FFFFFF"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <!--======================사업자 회원가입 레이아웃==================================-->

                </FrameLayout>


            </LinearLayout>
        </TabHost>
    </LinearLayout>



</LinearLayout>